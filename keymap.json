[
  // ─────────────────────────────────────────────────────────────
  // Workspace - Panel Toggles
  // ─────────────────────────────────────────────────────────────
  {
    "context": "Workspace",
    "bindings": {
      "cmd-b": "project_panel::ToggleFocus",
      "ctrl-shift-g": "git_panel::ToggleFocus",
      "cmd-shift-a": "agent::ToggleFocus",
      "cmd-shift-c": "workspace::CopyRelativePath",
    },
  },

  // ─────────────────────────────────────────────────────────────
  // Pane - Tab Navigation (ctrl-1 through ctrl-9)
  // ─────────────────────────────────────────────────────────────
  {
    "context": "Pane",
    "bindings": {
      "cmd-1": ["pane::ActivateItem", 0],
      "cmd-2": ["pane::ActivateItem", 1],
      "cmd-3": ["pane::ActivateItem", 2],
      "cmd-4": ["pane::ActivateItem", 3],
      "cmd-5": ["pane::ActivateItem", 4],
      "cmd-6": ["pane::ActivateItem", 5],
      "cmd-7": ["pane::ActivateItem", 6],
      "cmd-8": ["pane::ActivateItem", 7],
      "cmd-9": ["pane::ActivateItem", 8],
    },
  },

  // ─────────────────────────────────────────────────────────────
  // Panel Close Shortcuts (when focused)
  // ─────────────────────────────────────────────────────────────
  {
    "context": "ProjectPanel",
    "bindings": {
      "cmd-b": "workspace::ToggleRightDock",
      "cmd-shift-c": "workspace::CopyRelativePath",
    },
  },
  {
    "context": "GitPanel",
    "bindings": {
      "ctrl-shift-g": "workspace::ToggleRightDock",
    },
  },
  {
    "context": "AgentPanel",
    "bindings": {
      "cmd-shift-a": "workspace::ToggleRightDock",
    },
  },

  // ─────────────────────────────────────────────────────────────
  // Terminal
  // ─────────────────────────────────────────────────────────────

  // ─────────────────────────────────────────────────────────────
  // Editor
  // ─────────────────────────────────────────────────────────────
  {
    "context": "Editor",
    "bindings": {
      "cmd-shift-c": "workspace::CopyRelativePath",
      "cmd-space": "editor::ShowCompletions",
      "cmd-=": "zed::IncreaseBufferFontSize",
      "cmd-+": "zed::IncreaseBufferFontSize",
      "cmd--": "zed::DecreaseBufferFontSize",
      "cmd-0": "zed::ResetBufferFontSize",
      "cmd-d": ["editor::SelectNext", { "replace_newest": false }],
      "cmd-shift-d": "editor::SelectAllMatches",
      "ctrl-enter": "editor::ToggleCodeActions",
    },
  },
  {
    "context": "Editor && mode == full",
    "bindings": {
      "alt-cmd-b": "editor::GoToDefinitionSplit",
    },
  },
]
